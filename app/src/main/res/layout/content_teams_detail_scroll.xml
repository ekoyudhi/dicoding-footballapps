<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".teams.TeamsDetailScrollActivity"
    tools:showIn="@layout/activity_teams_detail_scroll">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabBackground="?attr/selectableItemBackground"
        app:tabIndicatorColor="@color/colorSecondaryText"
        app:tabSelectedTextColor="@color/colorSecondaryText"
        app:tabTextColor="#fff">

    </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>